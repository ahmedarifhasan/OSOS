    }

    var postLink = '/user/dashboardu/' + '<%=userdata._id%>'

    function showPosition(position) {
        var lat = position.coords.latitude;
        var long = position.coords.longitude;
        var data = {
            lat: lat,
            long: long
        }
        console.log(data, "In dashboardu posting on ", postLink);
